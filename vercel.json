{
    "version": 2,
    "name": "job-app",
    "builds": [
        {
            "src": "Frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "Frontend/build"
            }
        },
        {
            "src": "Backend/app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/Backend/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "/Frontend/build/index.html"
        }
    ]
}